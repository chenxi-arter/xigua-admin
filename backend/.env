DB_USER = root
DB_PASS=123456
DB_NAME=short_drama



# JWT
JWT_SECRET=very-secret-key
JWT_EXPIRES_IN=7d

# Telegram Bot（找 @BotFather 获取）
TELEGRAM_BOT_TOKEN=8326325358:AAF-0oUGqae0X34i35PgD7Q7nctyc9LCNBI

# Redis配置 (可选，用于缓存)
