{
  "apps": [{
    "name": "telegram-bot",
    "script": "./bot.js",
    "instances": 1,
    "autorestart": true,
    "watch": false,
    "max_memory_restart": "500M",
    "env": {
      "NODE_ENV": "production"
    },
    "error_file": "./logs/error.log",
    "out_file": "./logs/output.log",
    "time": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "merge_logs": true,
    "max_size": "5M",
    "retain": 5,
    "compress": true,
    "min_uptime": "10s",
    "max_restarts": 10,
    "restart_delay": 4000,
    "exp_backoff_restart_delay": 100,
    "listen_timeout": 10000,
    "kill_timeout": 5000,
    "node_args": "--max-old-space-size=512"
  }]
}
